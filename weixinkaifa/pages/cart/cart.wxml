<!--pages/cart/cart.wxml-->
<view class="weui-panel weui-panel_access" wx:if="{{carts.length>0 }}" wx:for="{{ carts }}" wx:key="">

    <view class="weui-panel__hd">
        <text class="info-meta" wx:if="{{ !canEdit }}" data-value="edit" bindtap="onTapEdit">编辑</text>
        <text class="info-meta" wx:if="{{ canEdit }}" bindtap="onTapEdit">完成</text>
        <text class="info-meta" bindtap="del" data-id="{{ item.id }}">删除</text>
    </view>

    <view class="weui-panel__bd">
        <navigator url="" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
            <view class="weui-media-box__hd weui-media-box__hd_in-appmsg" bindtap="navigateTo" data-id="{{ carts[index].c_id}}">
                <image class="weui-media-box__thumb" src="http://localhost:8888{{ carts[index].tao_img }}" />
            </view>
            <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                <view class="weui-media-box__title">{{ carts[index].tao_title }}</view>
                <!-- <view class="weui-media-box__desc">
                    <text class="text-orangered"> 总价 ¥{{ item.totalAmount }}</text>
                </view> -->
                <view class="weui-media-box__info">
                    <view class="weui-media-box__info__meta">单价 x{{ carts[index].tao_price }}</view>
                     
                </view>
                <view class="quantity-wrapper" wx:if="{{ canEdit }}">
                    <view class="customize-qua">
                        <view class="quantity-decrease" bindtap="decrease" data-id="{{ item.id}}" data-total="{{ item.total }}"></view>
                        <input class="quantity" type="number" data-id="{{ item.id}}" value="{{ item.total }}" bindinput="bindKeyInput" />
                        <view class="quantity-increase" bindtap="increase" data-id="{{ item.id}}" data-total="{{ item.total }}"></view>
                    </view>
                </view>
            </view>
        </navigator>
    </view>
</view>

<view class="button-sp-area" wx:if="{{ carts.length >0}}">
    <button class="weui-btn" type="primary" bindtap="confirmOrder">去结算</button>
</view>
